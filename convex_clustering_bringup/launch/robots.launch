<?xml version="1.0"?>
<launch>
  <!-- No namespace here as we will share this description. 
       Access with slash at the beginning -->
  <arg name="gpu" default="true"/>
  <param name="robot_description" command="$(find xacro)/xacro --inorder $(find convex_clustering_description)/urdf/base_velodyne.urdf.xacro gpu:=$(arg gpu)"/>


  <!-- BEGIN ROBOT 1-->
  <group ns="robot1">
    <param name="tf_prefix" value="robot1_tf" />
    <include file="$(find convex_clustering_bringup)/launch/model.launch" >
      <arg name="init_pos" value="-x 0 -y 0 -z 0" />
      <arg name="robot_name"  value="robot1" />
    </include>
    <remap from="/velodyne_points" to="robot1/velodyne_points" />
  </group>

  <!-- BEGIN ROBOT 2-->
  <!-- <group ns="robot2">
    <param name="tf_prefix" value="robot2_tf" />
    <include file="$(find convex_clustering_bringup)/launch/model.launch" >
      <arg name="init_pos" value="-x 5 -y -5 -z 0" />
      <arg name="robot_name"  value="robot2" />
    </include>
    <remap from="/velodyne_points" to="robot2/velodyne_points" />
  </group> -->
</launch>